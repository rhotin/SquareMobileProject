<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/employeeImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/employeeImage"
        android:layout_toRightOf="@+id/employeeImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/employeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/employeePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone #"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/employeeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:id="@+id/employeeBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio" />

        <TextView
            android:id="@+id/employeeTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team" />

        <TextView
            android:id="@+id/employeeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type" />

    </LinearLayout>
</RelativeLayout>